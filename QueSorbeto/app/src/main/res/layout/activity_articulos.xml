<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Articulos"
    android:background="@drawable/fondo5"
    android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:text="Administración de Productos"
            android:padding="20dp" />

        <Button
            android:id="@+id/btn_registroP"
            android:layout_width="166dp"
            android:layout_height="45dp"
            android:layout_marginLeft="95dp"
            android:text="Registro"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.DialogWindowTitle"
            android:background="#f76952"
            android:textColor="#e7e7e7"
            android:layout_marginTop="60dp" />

        <Button
            android:id="@+id/btn_consultaP"
            android:layout_width="166dp"
            android:layout_height="45dp"
            android:layout_marginLeft="95dp"
            android:text="Consulta"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.DialogWindowTitle"
            android:background="#f76952"
            android:textColor="#e7e7e7"
            android:layout_marginTop="60dp" />

        <Button
            android:id="@+id/btn_actualizacionP"
            android:layout_width="166dp"
            android:layout_height="63dp"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.DialogWindowTitle"
            android:layout_marginLeft="95dp"
            android:text="Actualización de Productos"
            android:background="#f76952"
            android:textColor="#e7e7e7"
            android:layout_marginTop="60dp" />

</LinearLayout>